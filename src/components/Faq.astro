    }
    .icon {
      display: inline-block;
      position: absolute;
      top: 18px;
      right: 0;
      width: 28px;
      height: 38px;
     
      &::before {
        display: block;
        position: absolute;
        content: '';
        top: 9px;
        left: 5px;
        width: 20px;
        height: 2px;
        background: currentColor;
      }
      &::after {
        display: block;
        position: absolute;
        content: '';
        top: 0px;
        left: 13.8px;
        width: 2px;
        height: 20px;
        background: currentColor;
      }
    }
  }
  button[aria-expanded='true'] {
  
    .icon {
      &::after {
        width: 0;
      }
    }
    + .quest-content {
      opacity: 1;
      max-height: 9em;
      transition: all 200ms linear;
      will-change: opacity, max-height;
    }
  }
